<?php

$finder = PhpCsFixer\Finder::create()
    ->exclude('vendor')
    ->in(__DIR__)
;

return PhpCsFixer\Config::create()
	->setRules([
        '@Symfony' => true,
		'@PhpCsFixer' => true,
		'@PSR2' => true,
		'@PSR1' => true,
		'braces' => [
			'position_after_control_structures' => 'next',
		],
		'no_short_echo_tag' => false
    ])
    ->setFinder($finder)
;
